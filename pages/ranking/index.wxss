.page{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.head{
  height: 325rpx;
  background: #317EF3;
  width: 100%;
  position: relative;
  flex: none
}
.canvas_desc{
  font-size: 24rpx;
  color: #ffffff;
  bottom: 40rpx;
  position: absolute;
  width: 100%;
  text-align: center
}
.canvas-box{
  width: 150px;
  margin: 0 auto;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -6rpx
}
.head_message{
  position: absolute;
  bottom: 6rpx;
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0
}
.head_message .msg{
  text-align: center;
  flex: 1;
  color: #ffffff;
  font-size: 32rpx;
  padding-top: 50rpx;
}
.head_message .msg_l{
  padding-right: 50rpx;
}
.head_message .msg_r{
  padding-left: 50rpx;
}
.tab-item{
  width: 100%;
  overflow-y: auto;
  flex: 1 1 auto;
  height: 80rpx;
  display: flex;
  border-bottom: 1px solid #f3f3f3
}
.tab_items{
  flex: .5;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  position: relative
}
.tab_items.active{
  color: #317ef3;
  font-weight: 600;
  box-sizing: border-box;
  border-bottom: 2px solid #317ef3
}
.tab_items:first-child{
  border-right: 1px solid #f3f3f3
}
