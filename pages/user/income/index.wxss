page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
  position: relative
}
.weui-tab-list{
  border-bottom: 20rpx solid #eaeaea;
  padding: 30rpx;
}
.weui-tab-head{
  display: flex;
  align-items: flex-start;
}
.weui-navbar__item.weui-bar__item_on{
  color: #317ef3
}
.weui-navbar__slider{
  background: #317ef3
}
.shop_image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
  flex: 0 0 auto;
}
.shop_msg{
  flex: 1 1 auto;
  font-size: 28rpx;
  height: 180rpx;
  position: relative
}
.shop_msg view.shop_box{
  line-height: 80rpx;
  position: relative
}
.title{
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 1; /** 显示的行数 **/
  overflow: hidden;  /** 隐藏超出的内容 **/
   line-height: 40rpx; 
}
.shops{
  color: #7d7d7d;
}
.source{
  background: #317ef2;
  color: #fff;
  padding: 0 10rpx;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: table;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.weui-tab-body{
  display: flex;
  justify-content: space-around;
  padding:10rpx 0;
}
.weui-tab-body view.pay{
  flex: .3;
}
.weui-tab-body view.pay:first-child,.weui-tab-body view.pay:last-child{
  flex: .2
}
.weui-tab-body view.pay text{
  display: block;
  line-height: 56rpx;
}
.weui-tab-body view.pay .tit{
  font-size: 26rpx;
  color: #535353
}
.weui-tab-body view.pay .coins{
  font-size: 26rpx
}
.weui-tab-body view.pay:nth-child(1) .coins,.weui-tab-body view.pay:nth-child(2) .coins{
  font-weight: bold; 
  font-size: 28rpx
}
.weui-tab-foot{
  font-size: 24rpx;
  color: #7d7d7d;
}
.weui-tab-list:last-child{
  border: none
}