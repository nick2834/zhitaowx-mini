page{
  background: #f3f3f3
}
.month_title{
  line-height: 72rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
}
.record_list{
  background: #fff;
  width: 100%;
}
.list{
  padding: 12rpx 30rpx;
  box-sizing: border-box;
  height: 118rpx;
  border-bottom: 1rpx solid #eaeaea;
  position: relative;
}
.arrow{
  top: 0;
  right: 30rpx;
  line-height: 118rpx;
}
.list_content {
  display: flex
}
.list_content text{
  display: block;
  font-size: 28rpx;
  line-height: 51rpx;
  /* font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; */
  color: #5f5f5f
}
.list_l{
  margin-right: 30rpx;
}
.list_c{
  width: 67rpx;
  height: 102rpx;
  margin-right: 20rpx;
}
.list_r{
  width: 70%;
  overflow: hidden
}
.wxzf{
  width: 61rpx;
  height: 57rpx;
  margin-top: 22.5rpx;
}
.wx_money{
  /* font-weight: bold !important; */
  color: black !important;
}
.list_content text.wx_info{
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 1; /** 显示的行数 **/
  overflow: hidden;  /** 隐藏超出的内容 **/
}